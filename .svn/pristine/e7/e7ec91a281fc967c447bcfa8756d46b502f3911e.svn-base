            width 170px
            height 130px
        .item-right
          padding 20px
          .item-title
            padding-top 8px
            font-size 24px
            font-weight bold
            color #000
          .item-content
            padding-top 10px
            font-size 23px
            color #636363
            height 54px
            display flex
            align-items center
            overflow hidden
            line-height 27px
          .item-classify
            display flex
            width 500px
            justify-content space-between
            align-items: center;
            margin-top 5px 
            .poTime
              font-size 20px
              color #636363
            .classify
              color #fff
              font-size 18px
              padding 4px 8px 2px 8px
              &.deep
                background #009FEB
              &.speech
                background #E565FF
              &.machine
                background #FFC900
</style>
