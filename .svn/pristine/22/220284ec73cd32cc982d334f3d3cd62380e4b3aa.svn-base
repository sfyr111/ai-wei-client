<template>
  <div class="course-item">
    <div class="list-item" @click="play">
      <div class="list-icon">
        <i class="item-icon" :class="[pause? 'pause': 'play']"></i>
        <audio src="http://ws.stream.qqmusic.qq.com/M500001VfvsJ21xFqb.mp3?guid=ffffffff82def4af4b12b3cd9337d5e7&uin=346897220&vkey=6292F51E1E384E06DCBDC9AB7C49FD713D632D313AC4858BACB8DDD29067D3C601481D36E62053BF8DFEAF74C0A5CCFADD6471160CAF3E6A&fromtag=46"></audio>
      </div>
      <div class="list-font">
        <div class="font-title">
          <span>第一讲|人工智能起源</span>
        </div>
        <div class="font-bottom">
          <div class="time-update">
            <span>10小时前</span>
          </div>
          <div class="time-play">
            <span>{{currentTime}}</span>
            <span>/</span>
            <span>9:36</span>
          </div>
          <!-- <div class="time-percentage">
            <span>已播放</span>
            <span>98%</span>
          </div> -->
        </div>
      </div>
    </div>
  </div>
</template>

<script>
export default {
  name: 'course-item',
  props: {
    item: {
      type: Object,
      defalut: ''
    }
  },
  data () {
    return {
      pause: true,
      currentTime: '00:00:00'
    }
  },
  computed: {},
  components: {},
  watch: {},
  methods: {
    play () {
      if (this.pause) {
        document.querySelectorAll('audio')[0].play()
        this.pause = false
        this.time()
      } else {
        document.querySelectorAll('audio')[0].pause()
        this.pause = true
        this.time()
      }
    },
    time () {
      if (this.pause) {
        clearTimeout(t)
        return
      }
      var t = setTimeout(this.time, 1000)
      let time = parseInt(document.querySelectorAll('audio')[0].currentTime)
      this.currentTime = this.sec_to_time(time)
      if (time >= 10) { // 播放完后停止
        this.pause = true
        document.querySelectorAll('audio')[0].pause()
        document.querySelectorAll('audio')[0].currentTime = 0
        this.currentTime = this.sec_to_time(0)
      }
    },
    sec_to_time (s) {
      let t
      if (s > -1) {
        var hour = Math.floor(s / 3600)
        var min = Math.floor(s / 60) % 60
        var sec = s % 60
        if (hour < 10) {
          t = '0' + hour + ':'
        } else {
          t = hour + ':'
        }
        if (min < 10) {
          t += '0'
        }
        t += min + ':'
        if (sec < 10) {
          t += '0'
        }
        t += sec.toFixed(0)
      }
      return t
    },
    updateTime (updateTime) {
      const update = (Date.now() - updateTime) / 1000 / 60 / 60
      if (update < 24 && update > 1) { // 1小时 - 24小时
        return (update | 0) + '小时前更新'
      } else if (update > 24) { // > 24小时
        return (update / 24 | 0) + '天前更新'
      } else { // 1小时以内
        return '刚刚更新'
      }
    }
  },
  created () {},
  mounted () {}
}
</script>

